{
  "name": "garden",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "test": "turbo run test",
    "generate-openapi": "npm run generate-openapi --workspace apps/api",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "husky": "^9.1.7",
    "patch-package": "^8.0.1",
    "postinstall-postinstall": "^2.1.0",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "turbo": "^2.6.1",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@11.6.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "optionalDependencies": {
    "@esbuild/win32-x64": "^0.27.0",
    "@rollup/rollup-win32-x64-msvc": "^4.53.2"
  }
}
