        ],
        "responses": {
          "200": {
            "description": "Default Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "garden": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "string"
                        },
                        "name": {
                          "type": "string"
                        },
                        "unit": {
                          "anyOf": [
                            {
                              "type": "string",
                              "enum": [
                                "ft"
                              ]
                            },
                            {
                              "type": "string",
                              "enum": [
                                "m"
                              ]
                            }
                          ]
                        },
                        "gardenObjects": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "id": {
                                "format": "uuid",
                                "type": "string"
                              },
                              "name": {
                                "type": "string"
                              },
                              "x": {
                                "type": "number"
                              },
                              "y": {
                                "type": "number"
                              },
                              "width": {
                                "type": "number"
                              },
                              "height": {
                                "type": "number"
                              },
                              "rotation": {
                                "type": "number"
                              },
                              "type": {
                                "type": "string"
                              },
                              "plantable": {
                                "type": "boolean"
                              }
                            },
                            "required": [
                              "id",
                              "name",
                              "x",
                              "y",
                              "width",
                              "height",
                              "rotation",
                              "type",
                              "plantable"
                            ]
                          }
                        },
                        "version": {
                          "type": "integer"
                        }
                      },
                      "required": [
                        "id",
                        "name",
                        "unit",
                        "gardenObjects",
                        "version"
                      ]
                    }
                  },
                  "required": [
                    "garden"
                  ]
                }
              }
            }
          }
        }
      }
