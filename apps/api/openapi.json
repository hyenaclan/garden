    "/gardens/{gardenId}": {
      "get": {
        "summary": "Fetch garden snapshot",
        "tags": [
          "gardens"
        ],
        "parameters": [
          {
            "schema": {
              "type": "string"
            },
            "in": "path",
            "name": "gardenId",
            "required": true
